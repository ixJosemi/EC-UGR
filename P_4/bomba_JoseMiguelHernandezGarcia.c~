#include <stdio.h>	    // para printf()
#include <stdlib.h>	    // para exit()
#include <string.h>	    // para strncmp()/strlen()
#include <sys/time.h>	// para gettimeofday(), struct timeval

// La contrasenia es LANZAROTE, que es ascii es:
char password[] = {78, 67, 80, 92, 67, 84, 81, 86, 71};

// Realmente el codigo es 954
int passcode = 101;


void fail(){
	printf("\n");
	printf("***************\n");
	printf("*** BOOM!!! ***\n");
	printf("***************\n");
	printf("\n");
	exit(-1);
}

void success(){
	printf("\n");
	printf("*************************\n");
	printf("*** bomba desactivada ***\n");
	printf("*************************\n");
	printf("\n");
	exit(0);
}

//Comprobaci칩n de la clave
void numberCheck(int number){

	passcode = passcode + 5;
	passcode = passcode * 9;

	if(number != passcode)
		fail();
}

//Combrobacion de la contrase침a
void passwordCheck(char *p){

	int c = 0;
	char aux[strlen(password)];

	while(c < strlen(password)){
		aux[c] = p[c] + 2;
		c++;
	}

	if(strncmp(aux, password, strlen(password)))
		fail();
}

int main(){

#define SIZE 100
	char pass[SIZE];
	int code;

#define TLIM 60
	struct timeval tv1, tv2;	// gettimeofday() secs-usecs

	gettimeofday(&tv1, NULL);

	printf("Introduce la contrase침a: ");
	fgets(pass, SIZE, stdin);
    passwordCheck(pass);

	gettimeofday(&tv2, NULL);
	if (tv2.tv_sec - tv1.tv_sec > TLIM)
	    fail();

	printf("Introduce el c칩digo: ");
	scanf("%i", &code);
	numberCheck(code);

	gettimeofday(&tv1, NULL);
	if (tv1.tv_sec - tv2.tv_sec > TLIM)
		fail();

	success();
}
